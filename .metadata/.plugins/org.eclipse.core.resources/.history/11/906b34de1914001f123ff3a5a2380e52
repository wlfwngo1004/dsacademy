<script type="text/javascript" src="/include/js/jquery-3.6.0.min.js"></script>

<script type="text/javascript">
	$(function(){
		
		$("#getProfile").click(function(){
			event.prevetDefault();
			var accessToken = "${sessionScope.currentAT}"
			console.log("Access Token: " + accessToken);
			
			$.ajax({
				url: "/member/naver/getProfile",
				type: "GET",
				data: {
					accessToken: accessToken
				},
				success: function(response){
					$("#profileInfo").html(response);
				},
				error: function(xhr, status, error){
					console.error("Error fetching profile: " + error);
					$("#profileInfo").html("Failed to fetch profile.");
				}
			}); // ajax 끝
			
		}); // 클릭 이벤트 끝
		
	}) // $ 끝

</script>
</head>
